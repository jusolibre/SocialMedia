{% extends 'layout.twig' %}

{% block title %}Account management{% endblock %}

{% block content %}

<divclass="padding"></div>
<div class="row">
    <div class="10u -1u 10u(mobile) -1u(mobile) 10u(tablet) -1u(tablet)">
        <p id="dispo"></p>
        <form method="post" action="manage/manage">
            <section>
                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="username">eMail</label><span id="user"></span>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <input type="email" enctype="multipart/form-data" class="form-control" placeholder="eMail" name="email" />
                    </div>
                </div>
                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="password">Photo</label>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <input type="file" class="form-control" id="img" name="img" value="img"/>
                    </div>
                </div>
                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="password">Date de naissance</label>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <input class="form-control" placeholder="Date" name="date"/>
                    </div>
                </div>
                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="password">Pays</label>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <input class="form-control" placeholder="Pays" name="pays"/>
                    </div>
                </div>
                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="password">Ville</label>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <input class="form-control" placeholder="Ville" name="ville"/>
                    </div>
                </div>

                <div class="row">
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <label for="password">Description</label>
                    </div>
                    <div class="4u -2u 4u(mobile) 4u(tablet)">
                        <textarea class="form-control" rows="3" placeholder="Courte description" name="description"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="2u -5u 2u(mobile) -4u(mobile) 2u(tablet) -4u(tablet)">
                        <button type="submit" class="btn btn-primaryy" >Valider</button>
                    </div>
                </div>
        </form>
    </div>
    <div class="padding"></div>
    {% endblock %}
