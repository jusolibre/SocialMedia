{% extends 'layout.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
   <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3" id='container'>
        <p id="dispo"></p>
            <form action="{{ root }}register/checkuser" method="POST" id="register">
                <div class="form-padding">
                    <label for="">Pseudo</label><span id="user"></span>
                    <input type="text" name="username" class="form-control" id="username" />
                </div>

                <div class="form-padding">
                    <label for="">eMail</label><span id="email"></span>
                    <input type="text" name="email" class="form-control" id="mail"/>
                </div>

                <div class="form-padding">
                    <label for="">Mot de passe</label><span id="pass"></span>
                    <input type="password" name="password" class="form-control" id="password"/>
                </div>
                <div class="form-padding">
                    <label for="">Confirmez votre mot de passe</label><span id="confirm"></span>
                    <input type="password" name="password_confirm" class="form-control" id="pass_confirm"/>
                </div>
		<div class="col-md-4 col-md-offset-5">
		     <button type="submit" class="btn btn-primaryy" onSubmit="validate()">M'inscrire</button>
		</div>
            </form>
        </div>
    </div>
{% endblock %}
