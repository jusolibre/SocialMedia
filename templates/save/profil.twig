{% extends 'layout.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-12 profilHeader" style="background-color:rgba(10, 50, 150, 0.3);">
            <div class="col-sm-4">
                <img src="{{ asset }}/image/background.png" width="100%" class="img-circle">
            </div>
            <div class="col-sm-8">
                <h2 style="padding-top: 20px;">{{ user.nom }} {{ user.prenom }}</h2>
                <p style="text-align: center; padding-top: 20px;">{{ user.description }}</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>What happen's recently ?</h3>

            {% for message in wall %}

                {% if message.user.id == user.id %}
                <div class="col-xs-8 col-xs-offset-2 owner">
                {% else %}
                <div class="col-xs-8 col-xs-offset-2 other">
                {% endif %}

                    <p>{{ message.user.prenom }} {{ message.user.nom }} Ã  dit :</p>
                    <p>{{ message.message }}</p>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}